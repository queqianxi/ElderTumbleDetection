<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/深褐</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 添加这一句， 即可改变toolbar menu 图标的颜色-->
        <item name="android:textColorSecondary">#ffffff</item>
        <!--toolbar标题文字颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
    <style name="ToolbarPopupTheme" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:colorBackground">@color/深褐</item>  <!-- 设置背景颜色-->
        <item name="overlapAnchor">false</item>  <!--设置不覆盖锚点-->
    </style>
    <style name="perference_set_activity">
        <item name="colorPrimaryDark">@color/深褐</item>
        <item name="android:focusable">false</item>
        <item name="android:textColor">#ff000000</item> <!-- 字体颜色 -->
        <item name="android:colorBackgroundCacheHint">#00000000</item> <!-- 背景缓存色透明，避免拖动全黑 -->
        <item name="android:windowNoTitle">false</item> <!-- 是否有标题 -->
    </style>
    <style name="WarningTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/深褐</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
